# This file shows the structure of required .env files
# Copy and rename to .env.local or .env.production

# Backend Environment Variables (backend/.env)
PROJECT_NAME=SOP Hub Backend
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key
DATABASE_URL=sqlite+aiosqlite:///.sophub.db
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
FRONTEND_URL=http://localhost:3000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Frontend Environment Variables (src/.env)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_BACKEND_URL=http://localhost:8000
